@model ninja.Models.ViewModelUpdate

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm("UpdateInvoice", "Invoice"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Invoice</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model =>Model.invoice.Id)

        <div class="form-group">
            @Html.LabelFor(model => Model.invoice.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => Model.invoice.Type, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => Model.invoice.Type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
